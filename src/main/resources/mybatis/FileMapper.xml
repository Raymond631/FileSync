<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.filesync.mapper.FileMapper">
    <select id="getFileList" resultType="java.time.LocalDateTime">
        select file.last_modified from folder inner join file on folder.folder_id = file.folder_id where folder.folder_path = #{folder_path};
    </select>

    <insert id="insertFolder">
        insert into folder values (#{folderId},#{folderName},#{folderPath});
    </insert>

    <insert id="insertFile">
        insert into file values (#{folderId},#{relativePath},#{lastModified});
    </insert>
</mapper>